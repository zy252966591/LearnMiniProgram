<!--pages/text.wxml-->
<!-- 1.基本使用 -->
<text>Hello World</text>
<text>你好小程序\n</text>

<!-- 2.text常见的属性 selectable：true -->
<!-- 默认情况下text中的文本长按是不能选中的 -->
<text selectable>Hello Coderwhy\n</text>

<!-- 3.space: 决定文本空格的大小 -->
<!--  ensp: 半个中文字符的大小 
      emsp：一个中文字符的大小 
      nbsp：根据字体设置的空格大小-->
<text>3-Hello World\n</text>
<text space="nbsp">3-Hello World\n</text>
<text space="ensp">3-Hello World\n</text>
<text space="emsp">3-Hello World\n</text>

<!-- 4.decode属性： 是否解码文本 -->
<text decode>5 &gt; 3</text>
